#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "chess_api"

ChessApi.configure do |config|
  # config.user_agent = "your_email@example.com"
end

client = ChessApi::Client.new

if ChessApi.configuration.user_agent.nil?
  puts
  puts <<~MESSAGE
  ***WARNING*** Chess.com now requires a User Agent for the developer making API requests. This can be your Chess.com username, email, etc.
  To use the console with no issues, edit the `chess_api/bin/console.rb` file to add your user agent.
  MESSAGE
end

puts
puts "We've created a 'client' variable as a ChessApi::Client."
puts

require "irb"
IRB.start(__FILE__)
